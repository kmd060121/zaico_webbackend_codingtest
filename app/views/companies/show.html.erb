<div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
  <h1><%= @company.name %> の在庫一覧</h1>

  <div style="background: #f5f5f5; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <p><strong>会社ID:</strong> <%= @company.id %></p>
    <p><strong>在庫数:</strong> <%= number_with_delimiter(@company.inventories.count) %></p>
    <p><strong>入庫数:</strong> <%= number_with_delimiter(@company.purchases.count) %></p>
    <p><strong>出庫数:</strong> <%= number_with_delimiter(@company.deliveries.count) %></p>
  </div>

  <div style="margin-bottom: 20px;">
    <%= link_to '← アカウント一覧に戻る', companies_path, style: 'padding: 5px 15px; background: #666; color: white; text-decoration: none; border-radius: 3px;' %>
  </div>

  <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
      <tr style="background: #f0f0f0; border-bottom: 2px solid #333;">
        <th style="padding: 10px; text-align: left;">在庫ID</th>
        <th style="padding: 10px; text-align: right;">現在数量</th>
        <th style="padding: 10px; text-align: center;">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @inventories.each do |inventory| %>
        <tr style="border-bottom: 1px solid #ddd;">
          <td style="padding: 10px;"><%= inventory.id %></td>
          <td style="padding: 10px; text-align: right;"><%= number_with_delimiter(inventory.quantity) %></td>
          <td style="padding: 10px; text-align: center;">
            <%= link_to 'グラフ表示', inventory_path(inventory), style: 'padding: 5px 15px; background: #0066cc; color: white; text-decoration: none; border-radius: 3px;' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @inventories %>
</div>
